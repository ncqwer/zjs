{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ES2019", "DOM"],
    "module": "esnext",
    "target": "ES2019",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
